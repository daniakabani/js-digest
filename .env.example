# Environment configuration for js-digest
# Copy this file to .env and fill in the values

# SQLite database file (will be created if not exists)
DB_PATH=./data/db.sqlite

# Optional: token for the preview server approve endpoint
PREVIEW_TOKEN=change-me
PREVIEW_PORT=3099

# OpenAI configuration (only needed if LLM_MOCK=false)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# LLM mock mode (set to true to avoid real API calls)
LLM_MOCK=true

# Optional publish flags (guard)
PUBLISH=false

# Medium publishing (optional)
MEDIUM_TOKEN=
MEDIUM_USER_ID=

# LinkedIn publishing (optional)
LINKEDIN_TOKEN=
LINKEDIN_ORGANIZATION_ID=
